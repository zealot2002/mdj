<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- 灰色的圆角按钮 -->
    <corners
        android:bottomLeftRadius="4dp"
        android:bottomRightRadius="4dp"
        android:topLeftRadius="4dp"
        android:topRightRadius="4dp" />

    <gradient
        android:angle="270"
        android:endColor="@color/shallow_gray"
        android:startColor="@color/shallow_gray" />

    <stroke
        android:width="1dp"
        android:color="@color/shallow_gray" />

    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />

</shape>