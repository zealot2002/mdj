<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/white_round_bg"
    >
    <RelativeLayout 
        android:layout_width="match_parent"
	    android:layout_height="80dp"
	    android:background="@null"
        android:layout_margin="10dp"
        >
        <!-- 图片 -->
        <com.mdj.view.RoundImageView
            android:id="@+id/ivImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@mipmap/beaut_head"
            />
	    <TextView 
	        android:id="@+id/tvProjectName"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content" 
	    	android:text="肩背通关疗法"
	        android:textColor="@color/text_black"
	        android:textSize="@dimen/text_size_15"
            android:layout_toRightOf="@+id/ivImg"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
	        />

        <TextView
            android:id="@+id/tvProjectNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量:2"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_12"
            android:layout_toRightOf="@+id/ivImg"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/tvProjectName"
            android:layout_marginTop="9dp"
            />
        <TextView
            android:id="@+id/tvPackageUse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="套餐抵用2次"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_15"
            android:layout_toRightOf="@+id/ivImg"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <include layout="@layout/line"/>
    <com.mdj.view.MyListView
        android:id="@+id/lvPackageProjectList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:divider="#dadada"
        android:dividerHeight="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scrollbars="none"
        />
</LinearLayout>