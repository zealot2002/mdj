<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/tools"
              xmlns:TitleWidget="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/mdj_bg"
              android:orientation="vertical">

    <include layout="@layout/status_bar" />

    <com.mdj.moudle.widget.TitleWidget
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        TitleWidget:title_text="订单详情"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <!--第一部分-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="6dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/white_round_bg"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="订单信息"
                                android:textSize="13sp"
                                android:textColor="@color/text_gray"
                                android:layout_gravity="center_vertical"
                                />
                            <TextView
                                android:id="@+id/tvServiceType"
                                android:layout_width="26dp"
                                android:layout_height="13dp"
                                android:text=""
                                android:gravity="center"
                                android:textSize="10sp"
                                android:textColor="@color/white"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/black_round_bg"
                                android:layout_marginLeft="10dp"
                                android:visibility="gone"
                                />
                        </LinearLayout>
                        <include layout="@layout/line"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            >
                            <TextView
                                android:id="@+id/tvState"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="12sp"
                                android:textColor="@color/text_gray"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="16dp"
                                />
                            <TextView
                                android:id="@+id/tvOrderId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="12sp"
                                android:textColor="@color/text_gray"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="9dp"
                                />
                            <TextView
                                android:id="@+id/tvCreateTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="12sp"
                                android:textColor="@color/text_gray"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="9dp"
                                />
                            <TextView
                                android:id="@+id/tvOrderStatusRemark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="12sp"
                                android:textColor="@color/text_gray"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="16dp"
                                />
                        </LinearLayout>
                        <include layout="@layout/line"/>
                        <!--状态流-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="66dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            >
                            <!--确认下单-->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:orientation="vertical"
                                >
                                <ImageView
                                    android:id="@+id/ivFlow1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@mipmap/order_progress_normal"
                                    android:layout_gravity="center_horizontal"
                                    />
                                <TextView
                                    android:id="@+id/tvFlow1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="确认下单"
                                    android:textSize="10sp"
                                    android:textColor="@color/text_gray"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="8dp"
                                    />

                            </LinearLayout>
                            <!--支付成功-->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:orientation="vertical"
                                >
                                <ImageView
                                    android:id="@+id/ivFlow2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@mipmap/order_progress_normal"
                                    android:layout_gravity="center_horizontal"
                                    />
                                <TextView
                                    android:id="@+id/tvFlow2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="支付成功"
                                    android:textSize="10sp"
                                    android:textColor="@color/text_gray"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="8dp"
                                    />

                            </LinearLayout>
                            <!--美容师出发-->
                            <LinearLayout
                                android:id="@+id/llBeauticianGo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:orientation="vertical"
                                android:visibility="gone"
                                >
                                <ImageView
                                    android:id="@+id/ivFlow3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@mipmap/order_progress_normal"
                                    android:layout_gravity="center_horizontal"
                                    />
                                <TextView
                                    android:id="@+id/tvFlow3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="美容师出发"
                                    android:textSize="10sp"
                                    android:textColor="@color/text_gray"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="8dp"
                                    />

                            </LinearLayout>
                            <!--开始服务-->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:orientation="vertical"
                                >
                                <ImageView
                                    android:id="@+id/ivFlow4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@mipmap/order_progress_normal"
                                    android:layout_gravity="center_horizontal"
                                    />
                                <TextView
                                    android:id="@+id/tvFlow4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="开始服务"
                                    android:textSize="10sp"
                                    android:textColor="@color/text_gray"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="8dp"
                                    />

                            </LinearLayout>
                            <!--服务结束-->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:orientation="vertical"
                                >
                                <ImageView
                                    android:id="@+id/ivFlow5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@mipmap/order_progress_normal"
                                    android:layout_gravity="center_horizontal"
                                    />
                                <TextView
                                    android:id="@+id/tvFlow5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="服务结束"
                                    android:textSize="10sp"
                                    android:textColor="@color/text_gray"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="8dp"
                                    />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <Button
                        android:id="@+id/btnSetReferee"
                        android:layout_width="66dp"
                        android:layout_height="24dp"
                        android:textColor="@color/white"
                        android:background="@drawable/black_round_bg"
                        android:textSize="12sp"
                        android:text="关联推荐人"
                        android:gravity="center"
                        android:layout_marginTop="44dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"
                        />
                </RelativeLayout>
                <!--第二部分 项目信息-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/white_round_bg"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="6dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="项目信息"
                        android:textSize="13sp"
                        android:textColor="@color/text_gray"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        />
                    <include layout="@layout/line"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <com.mdj.view.RoundImageView
                            android:id="@+id/ivImg"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="10dp"
                            android:background="@color/transparent"
                            android:scaleType="fitXY"
                            android:src="@mipmap/beaut_head"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_toRightOf="@+id/ivImg"
                            >
                            <TextView
                                android:id="@+id/tvBeauticianName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_black"
                                android:textSize="15sp"
                                android:text=""
                                android:layout_marginTop="16dp"
                                />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="9dp"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_gray"
                                    android:textSize="12sp"
                                    android:text="项目名称: "
                                    />
                                <TextView
                                    android:id="@+id/tvProjectNames"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_black"
                                    android:textSize="12sp"
                                    android:text=""
                                    />
                            </LinearLayout>
                            <TextView
                                android:id="@+id/tvPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_gray"
                                android:textSize="12sp"
                                android:text=""
                                android:layout_marginTop="9dp"
                                />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnAppend"
                            android:layout_width="66dp"
                            android:layout_height="24dp"
                            android:textColor="@color/white"
                            android:background="@drawable/black_round_bg"
                            android:textSize="12sp"
                            android:text=""
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"
                            android:visibility="gone"
                            />
                    </RelativeLayout>
                </LinearLayout>

                <!--第三部分-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/white_round_bg"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="6dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="服务信息"
                            android:textSize="13sp"
                            android:textColor="@color/text_gray"
                            android:layout_gravity="center_vertical"
                            />

                    </LinearLayout>
                    <include layout="@layout/line"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        >
                        <TextView
                            android:id="@+id/tvContact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="@color/text_gray"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="16dp"
                            />
                        <TextView
                            android:id="@+id/tvContactPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="@color/text_gray"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="9dp"
                            />
                        <TextView
                            android:id="@+id/tvServiceTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="@color/text_gray"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="9dp"
                            />
                        <TextView
                            android:id="@+id/tvBeautyParlorName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="@color/text_gray"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="9dp"
                            android:visibility="gone"
                            />
                        <TextView
                            android:id="@+id/tvServiceAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="@color/text_gray"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="9dp"
                            android:layout_marginBottom="16dp"
                            />
                    </LinearLayout>
                    <include layout="@layout/line"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        >
                        <TextView
                            android:id="@+id/tvRemark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="@color/text_gray"
                            android:layout_gravity="center_vertical"
                            />

                    </LinearLayout>
                </LinearLayout>
                <!--第四部分-->
                <LinearLayout
                    android:id="@+id/llComment"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/white_round_bg"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="6dp"
                    >
                    <RelativeLayout
                        android:id="@+id/rlComment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/white_gray_selector"
                        android:clickable="true"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="评价详情"
                            android:textSize="13sp"
                            android:textColor="@color/text_gray"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/arrow_right"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>
            </LinearLayout>
        </ScrollView>
        <Button
            android:id="@+id/btnOperation"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="17sp"
            android:background="@drawable/round_red_deepred_selector"
            android:layout_gravity="bottom"
            android:layout_margin="5dp"
            />
    </FrameLayout>
</LinearLayout>