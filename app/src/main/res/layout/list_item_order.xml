<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="196dp"
    android:background="@drawable/white_gray_selector"
    android:orientation="vertical"
    android:paddingLeft="22dp"
    android:paddingRight="22dp" >

    <LinearLayout
        android:id="@+id/ll_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-07-01 14:20:19"
                android:textColor="@color/mdj_text_gray"
                android:textSize="@dimen/mdj_title_six" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="未出发"
                android:textColor="@color/mdj_text_yellow"
                android:textSize="@dimen/mdj_title_five" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/mdj_black_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rl_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" >

                <ImageView
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:background="@drawable/shap_beaut_detail_photo_bg" />

                <com.mdj.view.roundHead.RoundImageView
                    android:id="@+id/beauty_photo"
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/mdj_circle" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:orientation="vertical" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/beauty_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/mdj_txt_black_address"
                        android:textSize="@dimen/mdj_title_five" />

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/shape_prink2"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="到店"
                        android:textColor="@color/white"
                        android:textSize="@dimen/mdj_title_seven" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/order_sn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="订单号："
                    android:textColor="@color/mdj_text_gray"
                    android:textSize="@dimen/mdj_title_five" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="项目名称："
                        android:textColor="@color/mdj_text_gray"
                        android:textSize="@dimen/mdj_title_five" />

                    <TextView
                        android:id="@+id/project_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/mdj_text_gray"
                        android:textSize="@dimen/mdj_title_five" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/service_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="服务时间："
                    android:textColor="@color/mdj_text_gray"
                    android:textSize="@dimen/mdj_title_five" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/mdj_black_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp" >

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="￥"
            android:textColor="@color/mdj_txt_black_address"
            android:textSize="@dimen/mdj_title_four" />

        <TextView
            android:id="@+id/tv_button"
            android:layout_width="78dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/round_red_deepred_selector"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/mdj_title_five" />
    </RelativeLayout>

</LinearLayout>