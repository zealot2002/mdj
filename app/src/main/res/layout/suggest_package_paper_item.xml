<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_round_bg"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    >
<!--上半部-->
    <RelativeLayout
        android:id="@+id/rlItem"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:clickable="true"
        >
        <!--背景图-->
        <ImageView
            android:id="@+id/ivPic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/suggest_icon"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tvCurrentPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            />
        <com.mdj.moudle.widget.sale.SaleCountDownWidget
            android:id="@+id/saleCountDownWidget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    <include layout="@layout/line_without_margin"/>
    <!--下半部-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >
        <!--左边-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            >
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_black"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <!--功效-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="9dp"
                >
                <TextView
                    android:id="@+id/tvEfficiency1"
                    android:layout_width="46dp"
                    android:layout_height="15dp"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:background="@drawable/black_round_bg"
                    android:text=""
                    android:textColor="@color/white"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tvEfficiency2"
                    android:layout_width="46dp"
                    android:layout_height="15dp"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:background="@drawable/black_round_bg"
                    android:text=""
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tvEfficiency3"
                    android:layout_width="46dp"
                    android:layout_height="15dp"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:background="@drawable/black_round_bg"
                    android:text=""
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <!--价格-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                >
                <TextView
                    android:id="@+id/tvSymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/symbol_rmb"
                    android:textColor="#ff5c67"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ff5c67"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    />
                <TextView
                    android:id="@+id/tvOldPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_gray"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <!--有效期-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/project_time"
                />
            <TextView
                android:id="@+id/tvValidityDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#787878"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                />
            </LinearLayout>
    </RelativeLayout>
</LinearLayout>