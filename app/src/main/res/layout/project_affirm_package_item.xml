<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_package"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="15dp"
        android:paddingTop="15dp" >

        <TextView
            android:id="@+id/tv_package_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/mdj_text_black"
            android:textSize="@dimen/mdj_title_five" />

        <TextView
            android:id="@+id/tv_package_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_package_name"
            android:layout_marginTop="7dp"
            android:text="(使用期限：购买后90天)"
            android:textColor="@color/mdj_text_gray"
            android:textSize="@dimen/mdj_title_six" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/mdj_pink"
                android:textSize="@dimen/mdj_title_five" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="个"
                android:textColor="@color/mdj_text_black"
                android:textSize="@dimen/mdj_title_five" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="22dp"
                android:text=""
                android:textColor="@color/mdj_text_black"
                android:textSize="@dimen/mdj_title_five" />

           <!--  <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/mdj_pink"
                android:textSize="@dimen/mdj_title_five" /> -->
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>