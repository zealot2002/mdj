<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mdj_bg"
    android:orientation="vertical" >

    <include layout="@layout/status_bar" />

    <include
        android:id="@+id/title"
        layout="@layout/title_bar_mid" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="17dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="17dp" >

        <TextView
            android:id="@+id/tv"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="预约人"
            android:textColor="@color/mdj_text_gray"
            android:textSize="@dimen/mdj_title_two" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv"
            android:background="@null"
            android:singleLine="true"
            android:textColor="@color/mdj_text_black"
            android:textSize="@dimen/mdj_title_two" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mdj_black_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="17dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="17dp" >

        <TextView
            android:id="@+id/tv2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="手机号码"
            android:textColor="@color/mdj_text_gray"
            android:textSize="@dimen/mdj_title_two" />

        <EditText
            android:id="@+id/et_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv2"
            android:background="@null"
            android:ems="11"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@color/mdj_text_black"
            android:textSize="@dimen/mdj_title_two" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mdj_black_line" />

    <RelativeLayout
        android:id="@+id/rl_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="17dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="17dp" >

        <TextView
            android:id="@+id/tv1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="上门地址"
            android:textColor="@color/mdj_text_gray"
            android:textSize="@dimen/mdj_title_two" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/tv1"
            android:textColor="@color/mdj_text_black"
            android:textSize="@dimen/mdj_title_two" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/jiantou_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mdj_black_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="17dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="17dp" >

        <TextView
            android:id="@+id/tv3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="门牌"
            android:textColor="@color/mdj_text_gray"
            android:textSize="@dimen/mdj_title_two" />

        <EditText
            android:id="@+id/et_door"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv3"
            android:background="@null"
            android:maxLength="30"
            android:singleLine="true"
            android:textColor="@color/mdj_text_black"
            android:textSize="@dimen/mdj_title_two" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mdj_black_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <TextView
            android:id="@+id/tv4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="设置默认"
            android:textColor="@color/mdj_text_gray"
            android:textSize="@dimen/mdj_title_two" />

        <ToggleButton
            android:id="@+id/is_defalt"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ios7_btn"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="17dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="17dp"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除地址"
            android:textColor="@color/mdj_pink"
            android:textSize="@dimen/mdj_title_two" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_alignParentBottom="true"
            android:background="@drawable/red_deep_red_selector"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/mdj_title_two" />
    </RelativeLayout>

</LinearLayout>