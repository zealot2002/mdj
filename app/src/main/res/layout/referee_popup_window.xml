<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        >

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="420dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@color/transparent"
        >
        <!--上半部   美容师-->
        <RelativeLayout
            android:id="@+id/rlBeautician"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="@drawable/white_round_bg"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/ivImg"
                android:layout_width="79dp"
                android:layout_height="79dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                />
            <!--姓名，电话-->
            <RelativeLayout
                android:id="@+id/rlNameAndPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivImg"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/ivContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/contact"
                    android:background="@null"
                    />
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="欧阳丹丹"
                    android:layout_toRightOf="@+id/ivContact"
                    android:layout_marginLeft="20dp"
                    android:textSize="13sp"
                    android:textColor="@color/text_black"
                    />

                <ImageView
                    android:id="@+id/ivPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/phone"
                    android:background="@null"
                    android:layout_below="@+id/ivContact"
                    android:layout_marginTop="27dp"
                    />
                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ivPhone"
                    android:layout_marginLeft="20dp"
                    android:text="15088887777"
                    android:textSize="13sp"
                    android:textColor="@color/text_black"
                    android:layout_below="@+id/tvName"
                    android:layout_marginTop="27dp"
                    />
            </RelativeLayout>
            <Button
                android:id="@+id/btnOk"
                android:layout_width="66dp"
                android:layout_height="24dp"
                android:background="@drawable/black_round_bg"
                android:text="确定"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginTop="44dp"
                android:layout_below="@+id/rlNameAndPhone"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
        <!--上半部  优惠券 -->
        <RelativeLayout
            android:id="@+id/rlCoupon"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="@drawable/white_round_bg"
            >
            <LinearLayout
                android:id="@+id/llCoupon"
                android:layout_width="147dp"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:background="@mipmap/popup_coupon_bg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="69dp"
                >
                <!--左边-->
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp">
                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="normal"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="-10dp"
                        android:layout_marginRight="6dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/symbol_rmb"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_marginRight="2sp"
                        android:layout_toLeftOf="@+id/tvPrice"
                        android:layout_marginTop="6dp"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="1px"
                    android:layout_height="20dp"
                    android:background="@color/white"
                    android:layout_gravity="center_vertical"
                    />
                <!--右边-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YUAN"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="6dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优惠券"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:layout_marginLeft="6dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tvCoupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_black"
                android:textSize="13sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/llCoupon"
                android:layout_marginTop="52dp"
                />
            <Button
                android:id="@+id/btnView"
                android:layout_width="66dp"
                android:layout_height="24dp"
                android:background="@drawable/black_round_bg"
                android:text="去查看"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginTop="89dp"
                android:layout_below="@+id/tvCoupon"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/popup_close_selector"
            android:layout_marginTop="45dp"
            android:layout_gravity="center_horizontal|bottom"

            />

    </LinearLayout>
</RelativeLayout>