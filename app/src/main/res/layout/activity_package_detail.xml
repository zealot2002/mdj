<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:TitleWidget="http://schemas.android.com/apk/res-auto"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/status_bar"/>

    <com.mdj.moudle.widget.TitleWidget
        android:id="@+id/titleWidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        TitleWidget:title_text="套餐详情"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mdj_bg"
        >
        <!--list-->
        <ListView
            android:id="@+id/lvPackageDetailList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:divider="@color/transparent"
            android:scrollbars="none"
            android:layout_marginBottom="50dp"
            />

        <!--shopCar-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/white"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/mdj_shalow_gray"
                />

            <RelativeLayout
                android:id="@+id/rlShoppingCart"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/shopping_cart_icon"
                    android:layout_centerInParent="true"
                    />

                <RelativeLayout
                    android:id="@+id/rlHint"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/red_dot"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    >

                    <TextView
                        android:id="@+id/tvHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:text="2"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="-1dp"
                        />
                </RelativeLayout>


            </RelativeLayout>
            <TextView
                android:id="@+id/tvY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff5c67"
                android:textSize="15sp"
                android:text="@string/symbol_rmb"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/rlShoppingCart"
                />
            <TextView
                android:id="@+id/tvShoppingCartPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff5c67"
                android:textSize="22sp"
                android:text="0"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tvY"
                android:layout_marginLeft="1dp"
                />
            <View
                android:layout_width="1px"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tvShoppingCartPrice"
                android:layout_marginLeft="20dp"
                android:background="#333333"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvShoppingCartPrice"
                android:layout_marginLeft="40dp"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:text="有效期"
                    />
                <TextView
                    android:id="@+id/tvValidityDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:text="180天"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>
            <!--立即下单-->
            <RelativeLayout
                android:id="@+id/rlSubmit"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/red_deep_red_selector"
                android:orientation="horizontal"
                android:clickable="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:text="购买"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>