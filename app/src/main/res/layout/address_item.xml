<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/transparent"
              android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/ivRadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/radio_unselected"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        />

    <!--正常状态-->
    <RelativeLayout
        android:id="@+id/rlNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:visibility="gone"
        >

<!--中间内容-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:textSize="15sp"
                    android:text=""
                    />
                <TextView
                    android:id="@+id/tvUserPhone"
                    android:layout_toRightOf="@+id/tvUserName"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:textSize="15sp"
                    android:text=""
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tvAddress"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:textSize="12sp"
                android:text=""
                />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_icon_selector"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    <!--展开状态-->
    <LinearLayout
        android:id="@+id/llExpand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <!--用户姓名-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/contact"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />
            <com.mdj.view.ClearEditText
                android:id="@+id/etUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:drawableRight="@drawable/delete_selector"
                android:hint="请填写联系人姓名"
                android:textColorHint="#cccccc"
                android:textSize="13sp"
                android:textColor="@color/text_black"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="1px"
            android:background="@color/text_gray"
            />
        <!--用户手机号码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/phone"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />
            <com.mdj.view.ClearEditText
                android:id="@+id/etUserPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:inputType="phone"
                android:drawableRight="@drawable/delete_selector"
                android:hint="请填写联系人电话"
                android:textColorHint="#cccccc"
                android:textSize="13sp"
                android:textColor="@color/text_black"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="1px"
            android:background="@color/text_gray"
            />

        <!--地址-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/location"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp">

                <RelativeLayout
                    android:id="@+id/rlSearchAddress"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="true"
                    >

                    <TextView
                        android:id="@+id/tvAddressLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请填写地址"
                        android:textColor="#cccccc"
                        android:textSize="13sp"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/text_gray"
                    />
                <com.mdj.view.ClearEditText
                    android:id="@+id/etDetailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:singleLine="true"
                    android:drawableRight="@drawable/delete_selector"
                    android:hint="请填写门牌号"
                    android:textColorHint="#cccccc"
                    android:textSize="13sp"
                    android:textColor="@color/text_black"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout><!--展开-->
</LinearLayout>
