<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
              android:background="@color/mdj_bg"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_round_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            >
            <!--当前城市-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前城市"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_14"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <include layout="@layout/line_without_margin"/>
            <!--当前城市：北京-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                >
                <TextView
                    android:id="@+id/tvCurrentCityName"
                    android:layout_width="66dp"
                    android:layout_height="24dp"
                    android:text="北京"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/black_round_bg"
                    android:gravity="center"
                    />
            </LinearLayout>
            <include layout="@layout/line_without_margin"/>
            <!--热门城市-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热门城市"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_14"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <include layout="@layout/line_without_margin"/>
            <!--热门城市：北京，上海，广州，成都-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.zhy.flowlayout.TagFlowLayout
                    android:id="@+id/tflHotCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    >
                </com.zhy.flowlayout.TagFlowLayout>
            </LinearLayout>
            <include layout="@layout/line_without_margin"/>
            <!--已开通城市-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已开通城市"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_14"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

