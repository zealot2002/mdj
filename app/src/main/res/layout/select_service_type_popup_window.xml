<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        >

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="420dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@color/transparent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="@drawable/white_round_bg"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择服务方式"
                    android:textSize="15sp"
                    android:textColor="@color/text_black"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <View
                  android:layout_width="match_parent"
                  android:layout_height="1px"
                  android:background="#dadada" />
            <ImageButton
                android:id="@+id/btnInHome"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/select_service_type_inhome_selector"
                android:layout_marginTop="34dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tvInHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上门"
                android:textSize="13sp"
                android:textColor="@color/text_gray"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                />
            <ImageButton
                android:id="@+id/btnToShop"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/select_service_type_toshop_selector"
                android:layout_marginTop="45dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tvToShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到店"
                android:textSize="13sp"
                android:textColor="@color/text_gray"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/popup_close_selector"
            android:layout_marginTop="45dp"
            android:layout_gravity="center_horizontal|bottom"

            />

    </LinearLayout>
</RelativeLayout>