<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:TitleWidget="http://schemas.android.com/apk/res-auto"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:zhy="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/ivPic1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />

            <com.mdj.moudle.widget.sale.SaleCountDownWidget
                android:id="@+id/saleCountDownWidget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>
        <!--第一部分-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="95dp">
            <!--总销量-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/tvSoldNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:background="@drawable/black_round_bg"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    />
                <TextView
                    android:id="@+id/tvOriginPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:background="@drawable/black_round_bg"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <!--质量三包-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"
                >
                <!--支持退款-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/ivQuality1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/return_goods_icon"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:id="@+id/tvQuality1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支持退款"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"
                        android:textColor="@color/text_gray"
                        />
                </LinearLayout>
                <!--无隐形消费-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    >
                    <ImageView
                        android:id="@+id/ivQuality2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/no_invisible_consumption_icon"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:id="@+id/tvQuality2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="无隐形消费"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"
                        android:textColor="@color/text_gray"
                        />
                </LinearLayout>
                <!--独立套盒-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    >
                    <ImageView
                        android:id="@+id/ivQuality3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/independent_box_icon"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:id="@+id/tvQuality3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="独立套盒"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"
                        android:textColor="@color/text_gray"
                        />
                </LinearLayout>
            </LinearLayout>
            <!--价格-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                >
                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:textColor="@color/red"
                    android:layout_toRightOf="@+id/tvSymbol"
                    />
                <TextView
                    android:id="@+id/tvSymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/symbol_rmb"
                    android:textSize="12sp"
                    android:textColor="@color/red"
                    android:layout_alignBottom="@+id/tvPrice"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/tvOldPriceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPrice"
                    android:layout_marginTop="-5dp"
                    android:text="原价 "
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"
                    />
                <TextView
                    android:id="@+id/tvOldPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPrice"
                    android:layout_marginTop="-5dp"
                    android:layout_toRightOf="@+id/tvOldPriceText"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"
                    />

            </RelativeLayout>
        </FrameLayout>
        <include layout="@layout/line_without_margin"/>
        <!--亮点-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="— 亮点 —"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/black_more_round_bg"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginTop="28dp"
                />

            <com.zhy.flowlayout.TagFlowLayout
                android:id="@+id/id_flowlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/tvExpireTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/red"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
        <!--疗程-->
        <include layout="@layout/line_without_margin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="— 疗程项目 —"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/black_more_round_bg"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="15dp"
            />
        <!--套餐项目-->
        <include layout="@layout/line_without_margin"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#f3f3f3"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="套餐项目"
                android:textColor="@color/text_black"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tvSaveMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/text_gray"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                />
        </RelativeLayout>
        <include layout="@layout/line_without_margin"/>
    </LinearLayout>
</LinearLayout>