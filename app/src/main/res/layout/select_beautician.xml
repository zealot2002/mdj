<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/tools"
              xmlns:TitleWidget="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/mdj_bg"
              android:orientation="vertical">

    <include layout="@layout/status_bar" />
    <com.mdj.moudle.widget.TitleWidget
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        TitleWidget:title_text="选择美容师"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <Button
            android:id="@+id/btnAll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="智能排序"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:background="@drawable/left_round_gray_bg"
            />
        <Button
            android:id="@+id/btnOrderMost"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="月订单最多"
            android:textSize="13sp"
            android:textColor="@color/text_gray"
            android:background="@drawable/gray_hollow_bg"
            />
        <Button
            android:id="@+id/btnAppriaseMost"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="月好评最多"
            android:textSize="13sp"
            android:textColor="@color/text_gray"
            android:background="@drawable/right_round_gray_hollow_bg"
            />
    </LinearLayout>
    <com.mdj.view.ListenedScrollView
        android:id="@+id/observableScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
    <com.mdj.view.MyListView
        android:id="@+id/lvBeauticianList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:divider="@color/transparent"
        android:dividerHeight="6dp"
        android:scrollbars="none" />
    </com.mdj.view.ListenedScrollView>
</LinearLayout>