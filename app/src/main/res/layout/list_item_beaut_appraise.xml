<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="15dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.mdj.view.roundHead.RoundImageView
            android:id="@+id/client_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@mipmap/mdj_circle" />

        <TextView
            android:id="@+id/client_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/client_photo"
            android:text="小小"
            android:textColor="@color/mdj_text_black"
            android:textSize="@dimen/mdj_title_two" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_appraise_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="的fads分厘卡大师傅就adsl范德萨范德萨"
        android:textColor="@color/mdj_txt_deep_gray"
        android:textSize="@dimen/mdj_title_five" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:background="@drawable/shape_gray"
            android:gravity="center_vertical"
            android:paddingLeft="9dp"
            android:paddingRight="9dp" >

            <ImageView
                android:id="@+id/iv_appraise_type"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/appraise_icon" />

            <TextView
                android:id="@+id/tv_appraise_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="好评"
                android:textColor="@color/mdj_pink"
                android:textSize="@dimen/mdj_title_five" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_impression1"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_gray"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:text="美丽达人，美丽达人"
            android:textColor="@color/mdj_text_black"
            android:textSize="@dimen/mdj_title_five"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_impression2"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_gray"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:text="美丽达人"
            android:textColor="@color/mdj_text_black"
            android:textSize="@dimen/mdj_title_five"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/appraise_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015 12.11.11 12:30:00"
            android:textColor="@color/mdj_text_gray"
            android:textSize="@dimen/mdj_title_six" />

        <TextView
            android:id="@+id/project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:singleLine="true"
            android:text="魔力挺-活肤补水"
            android:textColor="@color/mdj_text_gray"
            android:textSize="@dimen/mdj_title_six" />
    </LinearLayout>

</LinearLayout>