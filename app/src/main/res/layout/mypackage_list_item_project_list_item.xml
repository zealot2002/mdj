<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        >

        <RelativeLayout
            android:id="@+id/rlNumber"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_number_bg" >

            <TextView
                android:id="@+id/tvNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="1"
                android:textColor="@color/text_gray"
                android:textSize="11sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvProjectName"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/rlNumber"
            android:text="魔力托-或腹部谁"
            android:textColor="@color/text_gray"
            android:maxLines="3"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvTimes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/btnUse"
            android:text="5/10"
            android:textColor="@color/text_gray"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnUse"
            android:layout_width="66dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/round_red_deepred_selector"
            android:text="去使用"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>