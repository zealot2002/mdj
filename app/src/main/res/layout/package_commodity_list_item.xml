<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="124dp"
    android:background="@drawable/white_round_bg"
    >
    <!-- 图片 -->
    <com.mdj.view.RoundImageView
        android:id="@+id/ivImg"
        android:layout_width="115dp"
        android:layout_height="124dp"
        android:background="@color/transparent"
        android:scaleType="fitXY"
        android:src="@mipmap/beaut_head"
        />
    <ImageView
        android:id="@+id/ivPreferential"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/preferential_icon"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <LinearLayout
        android:layout_toRightOf="@+id/ivImg"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            />

        <!--功效-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            >
            <TextView
                android:id="@+id/tvEfficiency1"
                android:layout_width="46dp"
                android:layout_height="15dp"
                android:gravity="center"
                android:textSize="10sp"
                android:background="@drawable/black_round_bg"
                android:text=""
                android:textColor="@color/white"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tvEfficiency2"
                android:layout_width="46dp"
                android:layout_height="15dp"
                android:gravity="center"
                android:textSize="10sp"
                android:background="@drawable/black_round_bg"
                android:text=""
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                />

        </LinearLayout>
        <!--价格-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            >
            <TextView
                android:id="@+id/tvSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/symbol_rmb"
                android:textColor="#ff5c67"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/tvPrice"
                android:layout_marginBottom="2dp"
                />
            <TextView
                android:id="@+id/tvPrice"
                android:layout_toRightOf="@+id/tvSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ff5c67"
                android:textSize="20sp"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/tvOldPrice"
                android:layout_toRightOf="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_gray"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:layout_alignBottom="@+id/tvPrice"
                android:layout_marginBottom="2dp"
                />
            <ImageView
                android:id="@+id/ivDays"
                android:layout_toLeftOf="@+id/tvValidityDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/project_time"
                android:layout_alignBottom="@+id/tvPrice"
                android:layout_marginBottom="3dp"
                />
            <TextView
                android:id="@+id/tvValidityDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#787878"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/tvPrice"
                android:layout_marginBottom="2dp"
                />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
