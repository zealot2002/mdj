<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:TitleWidget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mdj_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include layout="@layout/status_bar" />
        <com.mdj.moudle.widget.TitleWidget
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            TitleWidget:title_text="取消订单"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消原因"
            android:textColor="@color/text_black"
            android:textSize="13sp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="20dp"
            />
        <!--信息填写有误，重新预约-->
        <RelativeLayout
            android:id="@+id/rlReason1"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/white_round_bg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:clickable="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信息填写有误，重新预约"
                android:textColor="@color/text_black"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/ivRadio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/radio_selected"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>
        <!--计划有变，下次再约啦-->
        <RelativeLayout
            android:id="@+id/rlReason2"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/white_round_bg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:clickable="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计划有变，下次再约啦"
                android:textColor="@color/text_black"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/ivRadio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/radio_unselected"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>
        <!--其他-->
        <RelativeLayout
            android:id="@+id/rlReason3"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/white_round_bg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:clickable="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他"
                android:textColor="@color/text_black"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/ivRadio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/radio_unselected"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>
        <EditText
            android:id="@+id/etContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_white"
            android:enabled="true"
            android:gravity="top"
            android:hint="请在这里输入取消订单原因..."
            android:textColorHint="@color/text_gray"
            android:lines="10"
            android:padding="10dp"
            android:textSize="13sp"
            android:textColor="@color/text_black"
            android:visibility="gone"
            />

    </LinearLayout>
    <Button
        android:id="@+id/btnOk"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_red_deepred_selector"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="17sp" />
</RelativeLayout>

