<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="97dp"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_prject_photo"
            android:layout_width="99dp"
            android:layout_height="67dp"
            android:src="@mipmap/project_list_photo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp" >

            <TextView
                android:id="@+id/tv_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="摩力沱-活肤补水"
                android:textColor="@color/mdj_text_black"
                android:textSize="@dimen/mdj_title_three" />

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_project_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:text="数量：1"
                    android:textColor="@color/mdj_text_gray"
                    android:textSize="@dimen/mdj_title_six" />

                <ImageView
                    android:id="@+id/iv_time"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/time" />

                <TextView
                    android:id="@+id/tv_project_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:text="90分钟"
                    android:textColor="@color/mdj_text_gray"
                    android:textSize="@dimen/mdj_title_six" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_project_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:singleLine="true"
                android:text="￥ 99"
                android:textColor="@color/mdj_pink"
                android:textSize="@dimen/mdj_title_18" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_fuceng"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:background="#55000000"
        android:visibility="invisible" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="该地址与当前城市不匹配，请重新选择"
            android:textColor="@color/white"
            android:textSize="@dimen/mdj_title_five" />
    </RelativeLayout>

</FrameLayout>