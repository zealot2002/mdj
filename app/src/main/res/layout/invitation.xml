<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/mdj_bg"
              android:orientation="vertical"
    >
    <include layout="@layout/status_bar" />

    <com.mdj.moudle.widget.TitleWidget
        android:id="@+id/titleWidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="邀请好友"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_round_bg"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/invitation_editor_bg"
            android:hint="请输入您好友的手机号"
            android:gravity="center"
            android:textColorHint="#cccccc"
            android:textColor="@color/text_black"
            android:textSize="13sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入您邀请好友的手机号，好友下单后赠送您"
            android:textColor="@color/text_gray"
            android:textSize="13sp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            />

        <!--优惠券-->
        <LinearLayout
            android:layout_width="147dp"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@mipmap/popup_coupon_bg"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="34dp"
            >
            <!--左边-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp">
                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:textSize="38sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="-10dp"
                    android:layout_marginRight="6dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_toLeftOf="@+id/tvPrice"
                    android:layout_marginTop="6dp"
                    />
            </RelativeLayout>
            <View
                android:layout_width="1px"
                android:layout_height="20dp"
                android:background="@color/white"
                android:layout_gravity="center_vertical"
                />
            <!--右边-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YUAN"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="6dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优惠券"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_marginLeft="6dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每邀请五个好友下单后（需用被邀请手机号下单），还会额外赠送您1张100元通用代金券哦！"
            android:textColor="@color/text_black"
            android:textSize="13sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_horizontal"
            />
        <Button
            android:id="@+id/btnOk"
            android:layout_width="261dp"
            android:layout_height="44dp"
            android:background="@drawable/round_red_deepred_selector"
            android:text="立即邀请"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginTop="65dp"
            android:layout_marginBottom="65dp"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>
</LinearLayout>